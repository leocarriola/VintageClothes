<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Imagem do produto -->
        <ImageView
            android:id="@+id/imageProduto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Descrição do produto -->
            <TextView
                android:id="@+id/textDescricaoProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produto Exemplo"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_marginBottom="4dp"/>

            <!-- Quantidade -->
            <TextView
                android:id="@+id/textQuantidadeProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantidade: 1"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginBottom="4dp"/>

            <!-- Preço -->
            <TextView
                android:id="@+id/textPrecoProduto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Preço: 10.00€"
                android:textSize="14sp"
                android:textColor="#000000"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
